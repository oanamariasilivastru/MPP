# Configurare JDBC
javax.persistence.jdbc.driver=org.postgresql.Driver
javax.persistence.jdbc.url=jdbc:postgresql://localhost:5432/MPPCurse
javax.persistence.jdbc.user=postgres
javax.persistence.jdbc.password=Superman1994

# Configurare dialect Hibernate pentru PostgreSQL
hibernate.dialect=org.hibernate.dialect.PostgreSQLDialect

# Acțiunea de generare a schemei bazei de date
javax.persistence.schema-generation.database.action=update

# Activarea logării instrucțiunilor SQL
hibernate.show_sql=true
hibernate.format_sql=true
hibernate.use_sql_comments=true
