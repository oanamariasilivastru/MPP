<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="150" prefWidth="300" spacing="5" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="LoginController">

    <Label text="Username:" />
    <TextField fx:id="usernameField" maxWidth="150" prefWidth="100" promptText="Username" />

    <Label text="Password:" />
    <PasswordField fx:id="passwordField" maxWidth="150" prefWidth="100" promptText="Password" />

    <Button fx:id="loginButton" onAction="#loginButtonClicked" prefWidth="70" text="Login" />
</VBox>
